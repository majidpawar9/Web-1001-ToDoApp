

<!-- Index.cshtml -->
@model List<Web_1001_ToDoApp.Models.Todo>

<h1>Todo List</h1>

<p><a class="btn btn-success" asp-action="Create">Create New Todo</a></p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Due</th>
            <th>Is Done</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@todo.Due</td>
                <td>@(todo.IsDone ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@todo.Id">Details</a> 
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@todo.Id">Edit</a> 
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@todo.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
