<!-- Views/Todo/Delete.cshtml -->
@model Web_1001_ToDoApp.Models.Todo
<h1>Delete Todo</h1>
<!-- This is delete todo page -->
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Due</dt>
        <dd class="col-sm-10">@Model.Due</dd>
        <dt class="col-sm-2">Is Done</dt>
        <dd class="col-sm-10">@Model.IsDone</dd>
    </dl>
</div>
<form asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
