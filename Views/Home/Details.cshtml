<!-- Views/Todo/Details.cshtml -->
@model Web_1001_ToDoApp.Models.Todo
<!-- This page is for detail of todo -->
<h1>Todo Details</h1>

<div>
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Due</dt>
        <dd class="col-sm-10">@Model.Due</dd>
        <dt class="col-sm-2">Is Done</dt>
        <dd class="col-sm-10">@Model.IsDone</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
